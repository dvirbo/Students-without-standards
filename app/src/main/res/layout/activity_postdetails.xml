<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postDetails"
    android:background="@color/colorPrimary_1">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarofnotedetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorPrimary_1">


        <TextView
            android:id="@+id/titleofnotedetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary_1"
            android:fontFamily="@font/ubuntu_bold"
            android:paddingTop="12dp"
            android:text="@string/title_displayed_here"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="-3dp">

        <TextView
            android:id="@+id/phoneofnotedetail"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/toolbarofnotedetail"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="567dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/phone_number"
            android:textSize="@dimen/_15ssp" />


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/contentofnotedetail"
        android:layout_width="wrap_content"
        android:layout_height="532dp"
        android:layout_below="@+id/authorNamePD"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-3dp"
        android:background="#faf7f7"
        android:backgroundTint="@color/colorPrimary_1"
        android:fontFamily="@font/ubuntu_regular"
        android:gravity="top|left"
        android:hint="@string/enter_your_post_content_here"
        android:padding="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="17sp">

    </TextView>

    <ImageView
        android:id="@+id/back_button_postdetails"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/ic_back"
        android:onClick="backArrow"/>

    <ImageView
        android:id="@+id/menupopbutton"
        android:layout_width="38dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="313dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-1dp"
        android:layout_toEndOf="@+id/back_button_postdetails"
        android:layout_weight="0"
        android:src="@drawable/ic_baseline_more_vert_24" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="113dp"
        app:srcCompat="@drawable/background_subtitle_idicator" />

    <TextView
        android:id="@+id/authorNamePostDetail"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="174dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="@string/author_name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"/>


</com.google.android.material.circularreveal.CircularRevealRelativeLayout>